<h3>My orders</h3>

{{#if orders.length}}

{{#each orders}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          Order:
          <small>
            {{_id}}
          </small>
        </span>
        <p class="date">
          {{date}}
        </p>
        <p>
          {{user.userId.name}}
          <em>
            {{user.userId.email}}
          </em>
        </p>

        <ol>
          {{#each courses}}
          <li>

            <span class="course-order">
              {{course.title}},
            </span>
            <span class="price order">
              {{course.price}}
            </span>
            x{{count}}
          </li>

          {{/each}}
        </ol>

        <p>Total: <span class="price order-total">{{price}}</span></p>

      </div>
    </div>
  </div>
</div>
{{/each}}

{{else}}
<p>
  No orders
</p>
{{/if}}
